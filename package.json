{
    "name": "provider",
    "version": "1.0.0",
    "description": "Provider service for contract testing demo",
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:consumer": "jest consumer/test/consumer.test.js",
        "can:i:deploy:consumer": "pact-broker can-i-deploy --pacticipant LibraryConsumer --version=$GITHUB_SHA --to-environment production",
        "test:provider": "jest provider/test/provider.spec.js", 
        "can:i:deploy:provider": "pact-broker can-i-deploy --pacticipant LibraryProvider --version=$GITHUB_SHA --to-environment production",
        "publish:pact": "pact-broker publish ./pacts --consumer-app-version=$GITHUB_SHA --tag=main --tag=main --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN"
    },
    "dependencies": {
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@pact-foundation/pact": "^11.0.2",
        "jest": "^29.5.0"
    }
}